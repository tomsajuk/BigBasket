<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bigbasket.ItemSearch">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:context=".MainVolleyActivity"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter_name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/name"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send_name"
            android:id="@+id/nButton"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nTextView"
            android:layout_below="@+id/nButton"
            android:layout_marginTop="26dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="italic"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
